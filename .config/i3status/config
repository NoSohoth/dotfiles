# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 1
}

order += "disk /home/maelstrom"
order += "cpu_temperature 0"
order += "cpu_usage"
order += "battery 0"
order += "path_exists VPN"
order += "wireless wlp3s0"
order += "ethernet usb0"
order += "ethernet enp4s0"
order += "volume master"
order += "tztime local"
#order += "load"
#order += "run_watch DHCP"
#order += "run_watch VPN"
#order += "ipv6"

disk "/home/maelstrom" {
        format = " %avail left "
}

cpu_temperature 0 {
	format = " Temp: %degrees °C "
	max_threshold = "80"
}

cpu_usage {
	format = " Core™ i7: %usage "
}

battery 0 {
    format = " %status %percentage (%consumption) "
	low_threshold = "10"
	threshold_type = "percentage"
	path = "/sys/class/power_supply/BAT0/uevent"
	last_full_capacity = true
    status_chr = "⚇ CHR"
    status_bat = "⚡ BAT"
    status_full = "☻ FULL"
}

path_exists VPN {
     # path exists when a VPN tunnel launched by nmcli/nm-applet is active
     path = "/proc/sys/net/ipv4/conf/tun0"
}

wireless wlp3s0 {
        format_up = " wlp3s0: (%quality at %essid) %ip "
        format_down = " wlp3s0: down "
}

ethernet usb0 {
        format_up = " usb0: %ip (%speed) "
        format_down = " usb0: down "
}

ethernet enp4s0 {
        # if you use %speed, i3status requires root privileges
        format_up = " enp4s0: %ip (%speed) "
        format_down = " enp4s0: down "
}

volume master {
	format = " ♫: %volume "
	format_muted = " ♫: muted (%volume)"
	device = "default"
	mixer = "Master"
	mixer_idx = 0
}

tztime local {
        format = " %a %d/%m/%Y   %H:%M:%S %Z   (@ %s)"
}

#load {
#        format = "%1min"
#}

